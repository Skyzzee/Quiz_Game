{% extends 'base.html.twig' %}

{% block title %}Information{% endblock %}

{% block body %}
    <h1>Menu Administrateur</h1>
    <h2>Information utilisateur n°{{ user.id }}</h2>

    <table class="table">
        <tbody>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ user.name }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ user.firstname }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_index') }}" class="btn btn-primary">Retour sur la page d'accueil Admin</a>

    {% if  user.roles[0] != 'ROLE_ADMIN'  %} {# Possibilité de Modifier tous les utilisateurs SAUF l' Admin #}
        <a href="{{ path('app_admin_edit', {'id': user.id}) }}" class="btn btn-primary">Modifier l'utilisateur</a>
    {% endif %}

{% endblock %}
